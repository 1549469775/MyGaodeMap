<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/dg"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

        <TextView
            android:id="@+id/app_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textSize="25sp"
            android:text="蜂鸟速递V1.0"
            android:textColor="#18587e" />

    <LinearLayout
        android:id="@+id/login_ly"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/app_bar">
        <LinearLayout
            android:id="@+id/login_phone_ly"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_round_corners_white_area_gray_border"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="用户名"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#111111"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_username" />

            <EditText
                android:id="@+id/login_username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:hint="请输入用户名"
                android:textSize="13sp"
                android:gravity="center|left"
                android:maxLines="1"
                android:paddingBottom="10dp" />
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_marginRight="30dp"-->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_password_ly"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/bg_round_corners_white_area_gray_border"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="5dp"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="密码"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#111111"
                />

            <EditText
                android:id="@+id/login_passowrd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textSize="13sp"
                android:gravity="center|left"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/pwd_re"
        android:layout_alignStart="@+id/pwd_re">
        <ImageView
            android:id="@+id/facecamera"
            android:src="@mipmap/camera"
            android:layout_width="68dp"
            android:layout_height="38dp"
            android:gravity="center"
            />
        <TextView
            android:drawablePadding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫脸登录"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#111111"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/pwd_re"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/login_ly"
        >
        <CheckBox
            android:text="记住密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp" />
        <CheckBox
            android:text="自动登陆"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp" />
    </LinearLayout>
    <Button
        android:id="@+id/login_confirm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/pwd_re"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_blue_button"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/font_white"
        android:textSize="18sp" />
    <Button
        android:id="@+id/register_confirm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/login_confirm"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_blue_button"
        android:gravity="center"
        android:text="注册"
        android:textColor="@color/font_white"
        android:textSize="18sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="江西师范大学"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copyright@2007-2017 jxnu"
            />
    </LinearLayout>

</RelativeLayout>